.comment{C language example demonstrates pointers and manual memory management}
<!-- C example: linked list data structure -->

.slide{
    .style{background: #1e1e1e; color: #d4d4d4; align=center}
    .title{Source: C Example}
    .body{
        <h2>Linked List in C</h2>
        .code{.syntax{language=c}
#include <stdio.h>
#include <stdlib.h>

typedef struct Node {
    int data;
    struct Node* next;
} Node;

Node* create_node(int data) {
    Node* new_node = (Node*)malloc(sizeof(Node));
    if (new_node == NULL) {
        fprintf(stderr, "Memory allocation failed\n");
        exit(1);
    }
    new_node->data = data;
    new_node->next = NULL;
    return new_node;
}

void print_list(Node* head) {
    Node* current = head;
    while (current != NULL) {
        printf("%d -> ", current->data);
        current = current->next;
    }
    printf("NULL\n");
}
        }
    }
}

